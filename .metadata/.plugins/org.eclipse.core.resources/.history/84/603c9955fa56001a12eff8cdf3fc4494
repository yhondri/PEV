package problems;

import java.util.Random;

import base.Utils;
import entities.Chromosome;

public class Problem2 implements GenericProblem {

	private boolean[] genes;
	private double fenotipo;
	private double fitness;
	private double puntuacion;
	private double puntuacionAcc;
	private int longitud;
	private double max;
	private double min;
	
	public Problem2(double prec) {
		min = -10;
		max = 10;
		longitud = Utils.getGenotypeLength(min, max, prec) * 2;
		genes = new boolean[longitud];
	}
	
	public Problem2(Problem2 c) {
		min = -10;
		max = 10;
		longitud = c.getLongitud();
		genes = c.getGenes().clone();
	}
	
	@Override
	public void getRandomChromosome() {
		Random rd = new Random();
		for(int i = 0; i < longitud; i++) {
			genes[i] = rd.nextBoolean();
		}
	}

	@Override
	public double getFitness(Chromosome chromosome) {
		// TODO Auto-generated method stub
		return 0;
	}


	
	private boolean[] getGenes() {
		return genes;
	}

	private int getLongitud() {
		return longitud;
	}
}
